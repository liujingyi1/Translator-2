<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item
        android:top="2dp">
        <shape
            android:shape="oval">
            <solid android:color="#D8D8D8" />
            <stroke
                android:width="1dp"
                android:color="#D8D8D8" />
            <size
                android:width="60dp"
                android:height="60dp" />
        </shape>
    </item>

    <item android:bottom="2dp">
        <shape
            android:shape="oval">
            <solid android:color="#FFFFFF" />
            <stroke
                android:width="1dp"
                android:color="#D8D8D8" />
            <size
                android:width="60dp"
                android:height="60dp" />
        </shape>
    </item>
</layer-list>