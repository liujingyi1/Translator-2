<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        style="@style/CategoryStyle"
        android:text="@string/feedback_question_description_title" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:background="@android:color/white"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/feedback_description_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_marginStart="58dp"
            android:layout_marginEnd="58dp"
            android:background="@android:color/white"
            android:hint="@string/feedback_question_description"
            android:imeOptions="actionNone"
            android:textColor="@color/settings_primary_color"
            android:textSize="@dimen/settings_primary_size" />

        <com.letrans.android.translator.settings.about.VoiceButton
            android:id="@+id/feedback_voice_view"
            android:visibility="invisible"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="18dp"
            android:background="@drawable/icon_voice" />
        <ImageView
            android:id="@+id/feedback_voice_delete"
            android:visibility="invisible"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="18dp"
            android:background="@drawable/icon_voice_delete" />
    </RelativeLayout>

</LinearLayout>