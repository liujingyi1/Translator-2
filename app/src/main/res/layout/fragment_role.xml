<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/fragment_title"
            style="@style/CategoryStyle"
            android:text="@string/role_fragemnt_title" />

        <RadioGroup
            android:id="@+id/role_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/role_custom_group"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingEnd="18dp"
                android:paddingStart="18dp">

                <RadioButton
                    android:id="@+id/role_custom"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:clickable="false" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="0dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/role_custom_title"
                        android:textColor="@color/settings_primary_color"
                        android:textSize="30sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/role_custom_summary"
                        android:textColor="@color/settings_secondary_color"
                        android:textSize="24sp" />
                </LinearLayout>
            </LinearLayout>

            <View
                style="@style/HorizontalLineStyle"
                android:layout_marginStart="58dp" />

            <LinearLayout
                android:id="@+id/role_admin_group"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingStart="18dp">

                <RadioButton
                    android:id="@+id/role_admin"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:clickable="false" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="0dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/role_admin_title"
                        android:textColor="@color/settings_primary_color"
                        android:textSize="30sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/role_admin_summary"
                        android:textColor="@color/settings_secondary_color"
                        android:textSize="24sp" />
                </LinearLayout>

                <Spinner
                    android:id="@+id/language_list"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:entries="@array/language_name_array" />

            </LinearLayout>
        </RadioGroup>

        <TextView
            android:id="@+id/start_page_title"
            style="@style/CategoryStyle"
            android:text="@string/start_up_page" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/start_page_1"
                    android:layout_width="wrap_content"
                    android:layout_height="270dp"
                    android:background="@drawable/rim_background"
                    android:clickable="true"
                    android:gravity="center"
                    android:padding="10dp"
                    android:layout_marginLeft="38dp"
                    android:layout_marginRight="34dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/start_page_1" />

                <TextView
                    android:id="@+id/start_page_text1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:textSize="16sp"
                    android:text="启动首屏"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/start_page_2"
                    android:layout_width="wrap_content"
                    android:layout_height="270dp"
                    android:background="@drawable/rim_background"
                    android:clickable="true"
                    android:gravity="center"
                    android:padding="10dp"
                    android:layout_marginLeft="34dp"
                    android:layout_marginRight="38dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/start_page_2" />

                <TextView
                    android:id="@+id/start_page_text2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:textSize="16sp"
                    android:text="启动首屏"/>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</ScrollView>