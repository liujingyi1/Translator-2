<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E7E9EF"
    android:fitsSystemWindows="true"
    android:paddingBottom="3dp"
    android:paddingEnd="3dp"
    android:paddingStart="3dp"
    android:paddingTop="3dp"
    tools:context=".home.HomeActivity">

    <android.support.v4.view.ViewPager
        android:id="@+id/id_language_items_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="44dp"
        />

    <com.letrans.android.translator.view.CircleIndicatorView
        android:id="@+id/id_home_page_indicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginBottom="19dp"
        app:enableIndicatorSwitch="true"
        app:indicatorBorderWidth="0dp"
        app:indicatorColor="#FFFFFF"
        app:indicatorRadius="6dp"
        app:indicatorSelectColor="#99000000"
        app:indicatorSpace="15dp" />

    <include layout="@layout/floating_action_button" />
    <ImageView
        android:id="@+id/id_home_left_indicator"
        android:layout_width="60dp"
        android:layout_height="120dp"
        android:clickable="true"
        android:visibility="gone"
        android:background="@drawable/home_language_item_bg"
        android:layout_gravity="center_vertical|start"
        />
    <ImageView
        android:id="@+id/id_home_right_indicator"
        android:layout_width="60dp"
        android:layout_height="120dp"
        android:clickable="true"
        android:visibility="gone"
        android:background="@drawable/home_language_item_bg"
        android:layout_gravity="center_vertical|end"
        />
</FrameLayout>