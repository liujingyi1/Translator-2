<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_feedback"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    android:background="@drawable/item_background_material"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/feedback_view"
        android:layout_width="58dp"
        android:layout_height="wrap_content"
        android:src="@drawable/icon_pick" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/feedback_textView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:textColor="@color/settings_primary_color"
            android:textSize="@dimen/settings_primary_size" />

        <View
            android:id="@+id/feedback_decoration_view"
            style="@style/HorizontalLineStyle"
            android:layout_marginStart="0dp" />
    </LinearLayout>

</LinearLayout>
