<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    android:background="@drawable/item_background_material"
    android:descendantFocusability="blocksDescendants"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/wifi_connected_status"
        android:layout_width="58dp"
        android:layout_height="40dp"
        android:scaleType="center"
        android:src="@drawable/icon_pick"
        android:visibility="invisible" />

    <FrameLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:textColor="@color/settings_primary_color"
            android:textSize="@dimen/settings_primary_size" />

        <TextView
            android:id="@+id/wifi_summary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:textColor="@color/settings_category_title_color"
            android:textSize="16sp"
            android:visibility="gone" />
    </FrameLayout>

    <ImageView
        android:id="@+id/wifi_lock_state"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginEnd="18dp"
        android:src="@drawable/wifi_locked_icon" />

    <ImageView
        android:id="@+id/iv_signal"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginEnd="18dp"
        android:src="@drawable/ic_wifi_signal_1" />

    <ImageView
        android:id="@+id/wifi_details_arrow"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:focusable="false"
        android:src="@drawable/details_icon" />

</LinearLayout>